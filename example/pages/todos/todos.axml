<view class="page-todos">

  <view class="user">
    <image class="avatar" src="{{user.avatar || '../../assets/logo.png'}}" background-size="cover"></image>
    <view class="nickname">{{user.nickName && user.nickName + '\'s' || 'My'}} Todo List
      <text a:if="{{done.value}}" class="todo-done">
        ğŸ‘
      </text></view>
  </view>

  <view class="todo-items">

    <checkbox-group class="todo-items-group">
      <label a:for="{{todos}}" class="todo-item {{item.completed ? 'checked' : ''}}" a:key="{{item.id}}">
        <checkbox class="todo-item-checkbox" value="{{item.completed}}" data-id="{{item.id}}"
          checked="{{item.completed}}" onChange="onTodoChanged" />
        <text class="todo-item-text">{{item.text}}</text>
      </label>
    </checkbox-group>

  </view>


  <view class="todo-footer">
    <add-button text="Add Todo" onClickMe="addTodo"></add-button>
  </view>

</view>